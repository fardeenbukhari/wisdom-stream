        }
    </script>

    <!-- Add Bootstrap JS and jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <div class="container mt-5">
        <h1>Movie Links</h1>

        <% if (urls.length> 0) { %>
            <ul class="list-group">
                <% urls.forEach(url=> { %>
                    <li class="list-group-item">
                        <strong>Title:</strong>
                        <%= url.title %>
                            <br>
                            <input type="text" value="<%- url.url %>" hidden>
                            <strong>URL:</strong> <a class="watch_btn" onclick="watch_movie(event)"
                                href="/watch?p=<%- pageNumber %>&u=<%- url.url %>">Watch</a>
                    </li>
                    <% }); %>
            </ul>

            <div class="mt-3">
                <% if (pageNumber> 1) { %>
                    <a href="?page=<%= pageNumber - 1 %>" class="btn btn-primary">Previous</a>
                    <% } %>
                        <a href="?page=<%= pageNumber + 1 %>" class="btn btn-primary ml-2">Next</a>
            </div>
            <% } else { %>
                <p>No links found.</p>
                <% } %>
    </div>

